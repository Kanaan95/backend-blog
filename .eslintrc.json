{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "no-unused-vars": ["error", { "vars": "all", "args": "warn" }],
        "quotes": ["error", "single"],
        "comma-dangle": ["error", "never"],
        "semi": ["error", "always"],
        "indent": ["error", 4],
        "object-curly-spacing": ["error", "always"],
        "no-unused-expressions": "error",
        "no-unused-labels": "error"
    }
}
